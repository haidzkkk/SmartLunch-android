<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:fitsSystemWindows="true"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/layout_cart"
                android:layout_width="327dp"
                android:layout_height="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF">

                <View
                    android:id="@+id/vuesax_line_visible"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/remove" />

                <TextView
                    android:id="@+id/gi_h_ng1"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/vuesax_line_visible"
                    android:gravity="right|top"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/gi_h_ng"
                    android:textAppearance="@style/gi_h_ng"
                    android:textStyle="bold"
                    android:translationY="-4.07sp" />

                <TextView
                    android:id="@+id/delete_cart"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/gi_h_ng1"
                    android:gravity="right|top"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/xo_"
                    android:textAppearance="@style/xo_"
                    android:translationY="-2.45sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_cart"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>