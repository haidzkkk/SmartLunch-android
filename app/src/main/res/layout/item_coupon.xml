<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_border_radius">
    <RelativeLayout
        android:layout_toLeftOf="@+id/layout_img"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_above="@+id/tv_code"
            />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingVertical="5dp"
            android:layout_centerVertical="true"
             />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:drawableStart="@drawable/icon_home_outline"
            android:layout_below="@+id/tv_code"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_img"
        android:layout_alignParentRight="true"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:background="@drawable/right_corner_border">
        <ImageView
            android:id="@+id/img_coupon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loading_img"
            android:scaleType="centerCrop"/>
    </LinearLayout>

</RelativeLayout>