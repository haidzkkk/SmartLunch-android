<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/orderStatusProgressLayout"
        android:layout_width="337dp"
        android:layout_height="28dp"
        android:background="@drawable/traking_toolbar"
        android:gravity="start|center"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/waitingOrderIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_waiting_order" />

        <View
            android:id="@+id/progressView1"
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:background="@color/red" />

        <ImageView
            android:id="@+id/cookingIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_cooking" />

        <View
            android:id="@+id/progressView2"
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:background="@color/red" />

        <ImageView
            android:id="@+id/deliveringIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_delivering" />

        <View
            android:id="@+id/progressView3"
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:background="@color/red" />

        <ImageView
            android:id="@+id/deliveredIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_delivered" />

    </LinearLayout>

</RelativeLayout>